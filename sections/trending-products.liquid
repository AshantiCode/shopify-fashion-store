  <section class="products section bg-gray">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="title text-center">
            <h2>{{ section.settings.title }}</h2>
          </div>
        </div>

        {% assign collection = collections[section.settings.collection]%}
        <div class="row">
        <!--Loop through the selceted collection -->
          {% for product in collection.products limit: section.settings.product-range %}
            <div class="col-md-4">
              <div class="product-item">
                <div class="product-thumb">
                <!--if price is reduced-->
                {% if product.compare_at_price and product.compare_at_price != product.price %}
                  <span class="bage">Sale</span>
                {% endif %}
                  <img class="img-responsive" src="{{ product.featured_image | img_url: '1920x'}}" alt="{{ product.featured_image.alt | escape }}">
                  <div class="preview-meta">
                    <ul>
                      <li>
                        <a href="#"><i class="fa fa-search"></i></a>
                      </li>
                      <li>
                        <a href=""><i class="fa fa-shopping-cart"></i></a>
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="product-content">
                  <h4><a href="{{ product.url }}">{{product.title}}</a></h4>
                  <p class="price">{{product.price | money}}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  {% schema %}
    {
      "name": "Trendings Products",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section Heading",
          "default": "Trending Products"
          
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "range",
          "id": "product-range",
          "label": "Product Limit",
          "min": 3,
          "max": 9,
          "default": 6
        }
      ]
    }
  {% endschema %}